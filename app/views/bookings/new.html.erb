<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a booking to your <%= @game.name %> game</h3>
        <%= simple_form_for [@game, @booking] do |f| %>
          <%= f.association :game, prompt: "Select a game", input_html: {data: { controller: "tom-select"}} %>
          <%= f.submit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
